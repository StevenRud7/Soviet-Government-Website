<!DOCTYPE html>
<html>

<head>
  <title>News</title>
  <!-- Bootstrap CSS -->
</head>

<body>
  <style>
    h1 {
      text-align: center;
      margin-top: 10px;
      margin-bottom: 30px;
      color: rgb(109, 0, 0);
      font-weight: bold;
    }

    body {
      margin-top: 70px;
    }
  </style>
  <h1>Famous News Stories</h1>
  <div class="container-fluid">
    <div class="row">
      <% news.forEach(function(item) { %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <img src="<%= item.imageUrl %>" class="img-fluid mb-3" alt="news image" width="400">
              <h5 class="card-title">
                <%= item.title %>
              </h5>
              <p class="card-text">
                <%= item.description %>
              </p>
              <a href="<%= item.newsUrl %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
        <% }); %>
    </div>
  </div>
  <!--  Javascript for Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>